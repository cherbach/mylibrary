<!-- Validation failure messages -->

<% if @author.errors.any? %>
<% @author.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
      <h3 class="panel-title">Edit <%= @author.name %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_author/<%= @author.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for author_name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Author
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Author" class="form-control" value="<%= @author.name %>">
            </div>
          </div> 

          <!-- Label and input for bio_id -->
          <div class="form-group">
            <label for="bio" class="col-sm-2 control-label">
              Bio
            </label>
            <div class="col-sm-10">
              <input type="text" id="bio" name="bio" placeholder="Bio" class="form-control" value="<%= @author.bio %>">
            </div> 
          </div> 

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Author
              </button>
              or
              <a href="/authors/<%= @author.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
