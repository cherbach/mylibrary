<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Genre #<%= @genre.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Genre</dt>
              <dd><%= @genre.genre_id %></dd>

              <dt>User</dt>
              <dd><%= @genre.user_id %></dd>

              <dt>Book</dt>
              <dd><%= @genre.book_id %></dd>

              <dt>Author</dt>
              <dd><%= @genre.author_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/genres" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/genres/<%= @genre.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_genre/<%= @genre.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
